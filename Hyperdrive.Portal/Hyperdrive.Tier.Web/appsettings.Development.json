{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=hyperdrive.db"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "JwtKey": "SOME_RANDOM_KEY_DO_NOT_SHARE",
    "JwtIssuer": "http://localhost:15208/",
    "JwtAudience": "http://localhost:4200",
    "JwtExpireDays": 30
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\PERSONAL\\MY SOURCE\\HYPERDRIVE\\Hyperdrive.Portal\\Hyperdrive.Tier.Web\\Hyperdrive.Log",
          "fileSizeLimitBytes": 100000,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}